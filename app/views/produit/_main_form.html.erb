
<!-- SECTION ETAPE 1 FAIRE PART -->

<%= form_tag root_path, method: :get, remote: :true, id: "form" do %>

<div class="section-name">
  <h2>ÉTAPE 1 : FAIRE-PART</h2>
  <p>format standard 5 x 7 po (orientation verticale ou horizontale)</p>
</div>

<div class="section-choice">

  <div class="choix-nombre">
    <div class="choix-top">
      <h2>Nombre de faire-part</h2>
    </div>
    <div class="choix-bottom">
     <%= number_field_tag 'mynombrefp', @mynombrefp, min: 25, max:500, class: "nombre-input form-control", onchange: "numberFieldValidate(event)" %>
   </div>
 </div>

 <div class="choix-env">
  <div class="choix-top">
    <h2>Besoin d'enveloppes</h2>
  </div>
  <div class="choix-bottom">

    <% if @myEnvFP %>
    <div class="btn-tag" id="btn1", onclick="numberFieldValidate(event)">Oui, SVP!<%= check_box_tag "clicked_enveloppe_fp", true, {:checked => "checked"}  %></div>
    <% else %>
    <div class="btn-tag" id="btn1", onclick="numberFieldValidate(event)">Oui, SVP!<%= check_box_tag "clicked_enveloppe_fp", true%></div>
    <% end %>

    <%= @myEnvFP %>
  </div>
</div>

<div class="choix-char">
  <div class="choix-top">
    <h2>Type de faire-part</h2>
  </div>
  <div class="choix-bottom">




    <% @faireparts.each do |fairepart| %>
    <div class="card">
      <div class="card-top">
        <%= cl_image_tag(fairepart.slug, :id => fairepart.slug, :alt =>fairepart.nom) %>
      </div>
      <div class="card-footer">

        <% if fairepart.couleur == true %>
        <p>Impression couleur</p>
        <% else %>
        <p>Impression noir et blanc</p>
        <% end %>

        <% if fairepart.verso == true %>
        <p>Recto-verso</p>
        <% else %>
        <p>Recto seulement</p>
        <% end %>
        <p><b>

          <%= @mynombrefp %> unités :
          <% @mypriceFp = @prices.select { |m| m.produit_id == fairepart.id && m.nombre == @myprice_unit} %>
          <%= number_with_precision(@mypriceFp[0].prixU * @mynombrefp.to_i, precision: 2) %> $*
        </b></p>

        <% if @myEnvFP %>

        <p><b>
          <%= @mynombrefp %> enveloppes :
          <%= @priceEnv5X7 = number_with_precision(@enveloppes5x7[0].prixU * @mynombrefp.to_i, precision: 2) %> $*

        </b></p>
        <% end %>
      </div>
    </div>
    <% end  %>

  </div>
</div>
</div>



<!-- SECTION ETAPE 2 CARTE REPONSES -->

