    <div class="btn-tag " id="btn2" onclick="selectTag(event, this.id)"><%= "Oui, SVP!" %><%= check_box_tag "clicked_enveloppe_rep", true %></div>
  </div>
</div>


<div class="choix-char">
  <div class="choix-top">
    <h2>Type de cartes-réponses</h2>
  </div>
